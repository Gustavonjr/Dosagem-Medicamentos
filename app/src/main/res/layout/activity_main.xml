<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="Escolha com/sem comprimido"
        />

    <Button
        android:id="@+id/btnCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="COM"
        android:onClick="setBtnCom"/>

    <Button
        android:id="@+id/btnSem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:text="SEM"
        android:onClick="setBtnSem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="Dose" />

    <EditText
        android:layout_width="70pt"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/edtDose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="Peso" />

    <EditText
        android:layout_width="70pt"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/edtPeso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="Concentração"
        android:visibility="invisible"
        android:id="@+id/txvConcentracao"
        />

    <EditText
        android:layout_width="70pt"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/edtConcentracao"
        android:text="1"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:layout_gravity="center_horizontal"
        android:layout_row="9"
        android:layout_column="1"
        android:id="@+id/txvResultado"/>
    <Button
        android:layout_width="70pt"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_gravity="center_horizontal"
        android:layout_row="10"
        android:layout_column="1"
        android:onClick="calcular"/>


</GridLayout>